generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  HR
  EMPLOYEE
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      Role     @default(EMPLOYEE)
  createdAt DateTime @default(now())
}

model Department {
  id        String     @id @default(cuid())
  name      String     @unique
  createdAt DateTime   @default(now())
  employees Employee[]
}

model Employee {
  id            String       @id @default(cuid())
  employeeCode  String       @unique
  fullName      String
  email         String       @unique
  title         String?
  departmentId  String?
  department    Department?  @relation(fields: [departmentId], references: [id])
  createdAt     DateTime     @default(now())
  leaveRequests LeaveRequest[]
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
}

model LeaveRequest {
  id         String      @id @default(cuid())
  employeeId String
  employee   Employee    @relation(fields: [employeeId], references: [id])
  fromDate   DateTime
  toDate     DateTime
  reason     String
  status     LeaveStatus @default(PENDING)
  createdAt  DateTime    @default(now())
}
